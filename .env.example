# Auth Provider Configuration
NEXT_PUBLIC_AUTH_PROVIDER=auth0

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_BASE_URL=http://localhost:3000
# AUTH0_CONNECTION=  # Leave blank for Universal Login with multiple providers

# Database - Turso (for production/Vercel)
# Get these from your Vercel dashboard under Storage â†’ Turso
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token

# Database - Local SQLite (for development without Turso)
# Uncomment and comment out Turso variables above to use local SQLite
# SQLITE_DB_PATH=./db/app.sqlite

